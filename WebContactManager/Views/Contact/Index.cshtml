@model WebContactManager.Models.Contact

@{
    ViewBag.Title = "Contact";
}

<div class="card">
    <div class="card-header">
        <h3>
            Contacts
        </h3>
    </div>
    <div class="card-body">
        <div class="modal" id="ModalForm" role="dialog">
            <div class="modal-dialog modal-sm">
                <div class="modal-content">
                    <div class="modal-header">
                        <H3 class="modal-title">Contact</H3>
                        <button type="button" class="close cancel btn-secondary btn btn-sm" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div id="dvForm">
                            <form id="frmdatos">
                                <div class="row">
                                    <div class="col">
                                        <input type="hidden" id="ConstactId" name="ConstactId" />
                                        <div class="form-group">
                                            <label asp-for="@Model.FirstName" class="col-form-label"></label>
                                            <input type="text" asp-for="@Model.FirstName" placeholder="First Name" required class="form-control" />
                                            <span asp-validation-for="@Model.FirstName" class="text-danger small"></span>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-form-label" asp-for="@Model.LastName"></label>
                                            <input type="text" asp-for="@Model.LastName" placeholder="Last Name" required class="form-control" />
                                            <span class="text-danger small" asp-validation-for="@Model.LastName"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="@Model.Address" class="col-form-label"></label>
                                            <textarea asp-for="@Model.Address" cols="1" rows="5" placeholder="Address" class="form-control"></textarea>
                                            <span class="text-danger small" asp-validation-for="@Model.Address"></span>
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="@Model.Email" class="col-form-label"></label>
                                            <input type="text" asp-for="@Model.Email" placeholder="Email" class="form-control" />
                                            <span asp-validation-for="@Model.Email" class="text-danger small"></span>
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="@Model.Phone" class="col-form-label"></label>
                                            <input type="text" asp-for="@Model.Phone" placeholder="Phone" class="form-control" />
                                            <span asp-validation-for="@Model.Phone" class="text-danger small"></span>
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="@Model.Genre" class="col-form-label"></label>
                                            <select asp-for="@Model.Genre" placeholder="Select Genre" required class="list-group">
                                                <option value="male" class="list-group-item">Male</option>
                                                <option value="femele" class="list-group-item">Femele</option>
                                            </select>
                                            <span asp-validation-for="@Model.Genre" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                            </form>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <div class="row">
                            <div class="col">
                                <div class="input-group">
                                    <input type="button" name="Save" value="Save" id="save" class="btn btn-success btn-sm" />
                                    <input type="button" name="Cancel" value="Cancel" id="cancel" class="btn btn-danger btn-sm cancel input-group-append" data-dismiss="modal" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="mb-1">
            <input type="button" name="add" value="Add New" id="addnewitem" class="btn btn-success btn-sm" />
        </div>
        <div id="dvDetails" class="mt-2">
            <table id="table_id" class="table table-responsive table-striped border-0 display w-100">
                <thead class="table-info text-center ">
                    <tr>
                        <th>@Html.DisplayNameFor(c => Model.ConstactId)</th>
                        <th>@Html.DisplayNameFor(c => Model.FirstName)</th>
                        <th>@Html.DisplayNameFor(c => Model.LastName)</th>
                        <th>@Html.DisplayNameFor(c => Model.Address)</th>
                        <th>@Html.DisplayNameFor(c => Model.Email)</th>
                        <th>@Html.DisplayNameFor(c => Model.Phone)</th>
                        <th>@Html.DisplayNameFor(c => Model.Genre)</th>
                        <th></th>
                    </tr>
                </thead>

            </table>
        </div>
    </div>
    <div class="card-footer ">
     
    </div>
</div>

@section Scripts{

    <script src="https://code.jquery.com/jquery-3.5.1.js" type="text/javascript"></script>
    <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js" type="text/javascript"></script>
    <script src="https://cdn.datatables.net/1.11.3/js/dataTables.bootstrap5.min.js" type="text/javascript"></script>

    @*@{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}*@

    <script src="~/js/Contact.js" type="text/javascript"></script>
    
    <script type="text/javascript">
                ENTITY_SAVE = '@Url.Action("Insert", "Contact")';
                ENTITY_UPDATE ='@Url.Action("Update", "Contact")'; 
                ENTITY_DELETE ='@Url.Action("Delete", "Contact")'; 
                GET_ALL_ENTITIES ='@Url.Action("GetAllContacts", "Contact")'; 
    </script>    

}

