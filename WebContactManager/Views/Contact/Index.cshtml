@{
    ViewBag.Title = "Contact";
}

<div class="card">
    <div class="card-header">
        <h3>
            Contacts
        </h3>
    </div>
    <div class="card-body">

        <div id="dvForm">
            <form id="frmdatos">
                <div class="row">
                    <div class="col-4">
                        <div class="form-group">
                            <input type="hidden" id="ConstactId" name="ConstactId" />
                            <span class="text-danger">*</span><input type="text" id="FirstName" name="FirstName" placeholder="First Name" required class="form-control" />
                            <span class="text-danger">*</span><input type="text" id="LastName" name="LastName" placeholder="Last Name" required class="form-control" />
                            <textarea id="Address" cols="1" rows="5" placeholder="Address" class="form-control"></textarea>
                            <input type="email" id="Email" name="Email" placeholder="Email" class="form-control" />
                            <input type="tel" id="Phone" name="Phone" placeholder="Phone" class="form-control" />
                            <span class="text-danger">*</span><select id="Genre" name="Genre" placeholder="Select Genre" required class="list-group">
                                <option value="male" class="list-group-item">Male</option>
                                <option value="femele" class="list-group-item">Femele</option>
                            </select>
                        </div>

                    </div>
                </div>
                <div class="row">
                    <div class="col-4 mt-2">
                        <div class="form-group">
                            <input type="button" name="Save" value="Save" id="save" class="btn btn-success btn-sm" />
                            <input type="button" name="Cancel" value="Cancel" id="cancel" class="btn btn-danger btn-sm" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
        
        <div id="dvDetails" class="mt-2">
            <table id="table_id" class="table table-responsive table-striped border-0 display w-100">
                <thead class="table-info">
                    <tr>
                        <th class="text-center">ConstactId</th>
                        <th class="text-center">FirstName</th>
                        <th class="text-center">LastName</th>
                        <th class="text-center">Address</th>
                        <th class="text-center">Email</th>
                        <th class="text-center">Phone</th>
                        <th class="text-center">Sexo</th>
                        <th></th>
                    </tr>
                </thead>

            </table>
        </div>
    </div>
    <div class="card-footer">

    </div>
</div>

@section Scripts{
  
    <script src="https://code.jquery.com/jquery-3.5.1.js" type="text/javascript"></script>
    <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js" type="text/javascript"></script>
    <script src="https://cdn.datatables.net/1.11.3/js/dataTables.bootstrap5.min.js" type="text/javascript"></script>


    <script src="~/js/Contact.js" type="text/javascript"></script>
}

