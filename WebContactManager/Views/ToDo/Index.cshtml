@model WebContactManager.Models.ToDo

@{
    ViewBag.Title = "ToDo Task";
}

<div class="card">
    <div class="card-header">
        <h3>Tasks</h3>
    </div>
    <div class="card-body">
        <div class="modal" id="todoModal" role="dialog">
            <div class="modal-dialog modal-sm">
                <div class="modal-content">
                    <div class="modal-header">
                        <h3>Task</h3>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col">
                                <form id="frmToDo">
                                    <input type="hidden" asp-for="@Model.ToDoId"/>
                                    <input type="hidden" asp-for="@Model.ContactId" />
                                    <div class="form-group">
                                        <label asp-for="@Model.Task" class="col-form-label"></label>
                                        <input type="text" asp-for="@Model.Task" class="form-control" placeholder="Task" />
                                        <span asp-validation-for="@Model.Task" class="text-danger small"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="@Model.Description" class="col-form-label"></label>
                                        <textarea type="text" asp-for="@Model.Description" class="form-control" placeholder="Description"></textarea>
                                        <span asp-validation-for="@Model.Description" class="text-danger small"></span>
                                    </div>
                                    <div class="form-group">
                                        <div class="form-check mt-1">
                                            <label asp-for="@Model.IsCompleted" class="form-check-label"></label>
                                            <input type="checkbox" asp-for="@Model.IsCompleted" class="form-check-input" />
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <div class="row">
                            <div class="col">
                                <div class="input-group">
                                    <input type="button" name="Save" value="Save" id="save" class="btn btn-success btn-sm" />
                                    <input type="button" name="Cancel" value="Cancel" id="cancel" class="btn btn-danger btn-sm canceltodo input-group-append" data-dismiss="modal" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="mb-1">
            <input type="button" id="AddNewToDo" name="AddNewToDo" value="Add New" class="btn btn-success btn-sm showmodal" />
        </div>
        <div id="divDetailsGrid">
            <table id="dtToDo" class="table table-responsive table-striped table-sm">
                <thead class="table-info text-center">
                    <tr>
                        <th>@Html.DisplayNameFor(c => @Model.ToDoId)</th>
                        <th>@Html.DisplayNameFor(c => @Model.Task)</th>
                        <th>@Html.DisplayNameFor(c => @Model.Description)</th>
                        <th>@Html.DisplayNameFor(c => @Model.IsCompleted)</th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
    <div class="card-footer">

    </div>
</div>

@section Scripts{

    <script src="~/js/ToDo.js" type="text/javascript"></script>

    <script type="text/javascript">
                ENTITY_SAVE = '@Url.Action("Insert", "ToDo")';
                ENTITY_UPDATE ='@Url.Action("Update", "ToDo")';
                ENTITY_DELETE ='@Url.Action("Delete", "ToDo")';
                GET_ALL_ENTITIES ='@Url.Action("GetAllContacts", "ToDo")';
    </script>
}